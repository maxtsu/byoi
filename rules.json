[
    {
        "comment": "rule for state of interface",
        "rule-id": "interface-state",
        "path": "/interfaces/interface/state/",
        "prefix": "openconfig-interfaces:",
        "index_values": ["interface_name"],
        "fields": ["interfaces/interface/state/admin-status", "interfaces/interface/state/oper-status"]
    },
    {
        "comment": "rule for subinterface link state",
        "rule-id": "sub-interface-state",
        "path": "interfaces/interface/subinterfaces/subinterface",
        "prefix": "openconfig-interfaces:",
        "index_values": [
            {
                "path": "interfaces/interface",
                "index": "name"
            },
            {
                "path": "interfaces/interface/subinterfaces/subinterface",
                "index": "index"
            }
        ],
        "fields": [
            {
                "path":["interfaces/interface/subinterfaces/subinterface","state"],
                "value": ["admin-status","oper-status"]
            }
        ]
    },
    {
        "comment": "rule for statistics of interface",
        "rule-id": "interface-traffic",
        "path": "interfaces/interface/state/counters",
        "prefix": "openconfig-interfaces:",
        "index_values": [
            {
                "path": "interfaces/interface",
                "index": "name"
            }
        ],
        "fields": [
            {
                "path":["interfaces/interface/state/counters"],
                "value": ["in-broadcast-pkts","in-discards","in-errors","in-fcs-errors","in-multicast-pkts","in-octets","in-pkts","in-unicast-pkts","in-unknown-protos","out-broadcast-pkts","out-discards","out-errors","out-multicast-pkts","out-octets","out-pkts","out-unicast-pkts"]
            }
        ]
    },
    {
        "comment": "rule for subinterface link statistics",
        "rule-id": "sub-interface-traffic",
        "path": "interfaces/interface/subinterfaces/subinterface/state",
        "prefix": "openconfig-interfaces:",
        "index_values": [
            {
                "path": "interfaces/interface",
                "index": "name"
            },
            {
                "path": "interfaces/interface/subinterfaces/subinterface",
                "index": "index"
            }
        ],
        "fields": [
            {
                "path":["interfaces/interface/subinterfaces/subinterface/state","counters"],
                "value": ["in-broadcast-pkts","in-discards","in-errors","in-fcs-errors","in-multicast-pkts","in-octets","in-pkts","in-unicast-pkts","in-unknown-protos","out-broadcast-pkts","out-discards","out-errors","out-multicast-pkts","out-octets","out-pkts","out-unicast-pkts"]
            }
        ]
    }
]