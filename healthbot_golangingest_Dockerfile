FROM golang:alpine as builder

RUN apk add alpine-sdk

WORKDIR /

COPY gnfingest/. gnfingest/.
COPY main.go .
COPY go.mod .
COPY go.sum .

RUN go mod download
RUN GOOS=linux GOARCH=amd64 go build -o app -tags musl

FROM alpine:latest as runner
RUN apk --no-cache add curl logrotate

WORKDIR /
COPY --from=builder app .
COPY README.md event_rules.json ./
COPY app-logs.conf /etc/logrotate.d/.
COPY jfit_reconfigure.sh /jfit_scripts/
RUN chmod +x /jfit_scripts/jfit_reconfigure.sh
RUN mv /etc/periodic/daily/* /etc/periodic/15min/.